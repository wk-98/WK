<!--pages/todoinfo/todoinfo.wxml-->




<view class="publisher-content info-outline"><!--最外边-->
<view  bindtap="delete" wx:if="{{signal == 2}}">
<van-icon style="float:right" name="close" size="20px" color="{{ icon_color}}"/>
<text style="float:right">删除</text>
</view>
 <view ><!--这是轮播图-->
      <swiper indicator-dots="true"  >
        <block wx:for="{{task.fileList}}" wx:key="unique">
          <swiper-item  >
            <image wx:if="{{item.name}}" src="{{item.name}}"></image>
          </swiper-item>
        </block>
      </swiper>
    </view><!--这是轮播图-->




</view><!--最外边-->
  <view class="cu-list menu-avatar">
   
<view class="cu-item">
 
 <view class="cu-avatar round lg" style="background-image:url({{task.userInfo.avatarUrl}});"></view>
        <view class="content flex-sub">
          <view>{{task.userInfo.nickName}}</view>
          <view class="text-gray text-sm flex justify-between">
            {{task.date}}
          </view>

         <view class="text-content">
      {{task.concent}}
    </view>

           </view>
            </view>
             </view>
    

<!--这是评论-->
<view class="comment-outline">
<block wx:for="{{com[0].comment_array}}">
<view class="cu-list menu-avatar comment solids-top">
<view class="cu-item">
        <view class="cu-avatar round" style="background-image:url({{item.userInfo1.avatarUrl}});"></view>
        <view class="content">
          <view class="text-grey">{{item.userInfo1.nickName}}</view>
          <view class="text-gray text-content text-df">
            {{item.comment_content}}
          </view>
         
          <view class="margin-top-sm flex justify-between">
            <view class="text-gray text-df">2018年12月4日</view>
            <view>
              <text class="cuIcon-appreciatefill text-red"></text>
              <text class="cuIcon-messagefill text-gray margin-left-sm"></text>
            </view>
          </view>
        </view>
      </view>
</view>
</block>
</view>


<view class="comment_under">

 <view class="cu-bar input">   <!--评论框-->
  
   <!--用于测试双向数据绑定的input-->
  <input class="solid-bottom" focus="{{false}}" maxlength="300" cursor-spacing="10" placeholder='此处写入评论内容' class="weui-input" data-item="info" bindinput="Comment_inputedit" name="manager" value="{{info}}" />
  <!--用于测试双向数据绑定的按钮-->
  <button class="cu-btn bg-blue shadow-blur" bindtap='Comment_btnClick'>评论</button>
  </view>

</view>


